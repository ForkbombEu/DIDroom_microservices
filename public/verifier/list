    <!-- Scripts -->
    <script>

        /* --------------- Default DCQL ---------------- */
        const flows = '';
        const jsonFlows = JSON.parse(flows);
        const container = document.getElementById('cardContainer');

        flows.forEach(flow => {
            // Create a card div
            const card = document.createElement('a');
            card.href = flow.url; // Link to the verifier
            card.target = "_blank";
            card.rel = "noopener";
            card.className = `
                block p-6 border border-gray-300 rounded-lg shadow hover:shadow-lg transition
                hover:bg-gray-50 text-left
            `;

            // Add content
            card.innerHTML = `
                <h3 class="text-lg font-bold mb-2">${flow.name}</h3>
                <p class="text-gray-700">${flow.description}</p>
            `;

            container.appendChild(card);
        });

        /* ---------- Backend polling functions -------- */
    </script>

